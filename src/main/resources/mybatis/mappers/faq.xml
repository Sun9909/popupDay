<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="flower.popupday.notice.faq.dao.FaqDAO">
    <resultMap id="faqResult" type="faqDTO">
        <result property="faq_id" column="faq_id"/>
        <result property="user_id" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>
        <result property="created_date" column="created_date"/>
    </resultMap>


    <!--faq 등록 -->
    <insert id="insertFaq" parameterType="faqDTO">
        insert into popup_day.faq_tbl(user_id, title, content, writer) values ('1', #{title}, #{content}, '관리자1')
    </insert>

    <!-- 등록된 faq 리스트 화면출력 -->
    <select id="selectAllFaqList" resultMap="faqResult">
        select * from popup_day.faq_tbl order by created_date
    </select>

    <!-- 등록된 faq 개수 가져오기 -->
    <select id="selectToArticles" resultMap="faqResult">
        select count(*) from popup_day.faq_tbl
    </select>
</mapper>