<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="flower.popupday.popup.dao.PopupDAO">

    <resultMap type="popupDTO" id="popResult">
        <id property="popup_id" column="popup_id"/>
        <result property="title" column="title"/>
        <result property="info" column="info"/>
        <result property="time" column="popup_hours"/>
        <result property="content" column="content"/>
        <result property="address" column="address"/>
        <result property="brand_page" column="brand_page"/>
        <result property="role" column="role"/>
        <result property="user_id" column="user_id"/>
        <result property="created_date" column="created_date"/>
        <result property="hits" column="hits"/>
    </resultMap>

    <resultMap type="imageDTO" id="imgResult">
        <id property="popup_image_id" column="popup_image_id"/>
        <result property="image_file_name" column="image_file_name"/>
        <result property="popup_id" column="popup_id"/>
    </resultMap>

    <resultMap id="hashTagDTO" type="hashTagDTO">
        <id property="popup_id" column="popup_id" />
        <result property="hash_tag" column="hash_tag" />
    </resultMap>

    <resultMap id="popupHashTagDTO" type="popupHashTagDTO">
        <id property="popup_id" column="popup_id" />
        <result property="hash_tag_id" column="hash_tag_id" />
    </resultMap>



    <select id="selectAllPopup" resultMap="popResult">
        select * from popup_tbl
    </select>

    <!-- 글번호 생성 -->
    <select id="getNewPopupId" resultType="int">
      <![CDATA[
        SELECT IFNULL(MAX(popup_id), 0) + 1 FROM popup_tbl
        ]]>
   </select>

    <insert id="insertNewPopup" parameterType="java.util.Map">
    <![CDATA[
        insert into popup_tbl (popup_id, title, info, popup_hours, content, address, brand_page, role, user_id, created_date)
        values (#{popup_id}, #{title}, #{info}, '조아용', #{content}, #{address}, #{brand_page}, '미승인', '1', now())
        ]]>
    </insert>

    <insert id="insertNewImages" parameterType="java.util.Map">
        insert into popup_image_tbl values
        <foreach collection="imageFileList" item="item" separator=","> <!-- 구분자 , 로 -->
            (#{item.popup_image_id},#{popup_id},#{item.image_file_name})
        </foreach> <!-- values에 있는 값 업데이트 -->
    </insert>

    <insert id="insertHashtag" parameterType="java.util.Map">
        INSERT INTO hash_tag_tbl (popup_id, hash_tag)
        VALUES
        <foreach collection="hashtag" item="hash_tag" separator=",">
            (#{popup_id}, #{hashtag})
        </foreach>
    </insert>

    <insert id="insertPopupHashTag" parameterType="flower.popupday.popup.dto.PopupHashTagDTO">
        INSERT INTO popup_hash_tag_tbl (popup_id, hash_tag_id)
        VALUES (#{popup_id}, #{hash_tag_id})
    </insert>






